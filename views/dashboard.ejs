<div class="flex justify-center py-10">
  <!-- Table -->
  <div
    class="w-full mx-4 md:w-8/12 shadow-md rounded-lg overflow-hidden border border-none"
  >
    <% if (message) { %>
    <div
      id="validation-message"
      class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md relative mb-4"
      role="alert"
    >
      <p><%= message.message %></p>
    </div>
    <% } %>
    <!-- Search -->
    <div class="flex justify-end mb-4">
      <form action="/search" method="get" class="flex">
        <input
          type="text"
          name="searchTerm"
          placeholder="Search by name, email, or phone"
          class="border p-2 rounded-l-lg w-full focus:outline-none"
        />
        <button
          type="submit"
          class="bg-indigo-500 text-white px-4 py-2 rounded-r-lg"
        >
          Search
        </button>
      </form>
    </div>

    <table class="min-w-full">
      <thead class="bg-indigo-800 text-white">
        <tr>
          <th class="py-2 px-4">Image</th>
          <th class="py-2 px-4">Name</th>
          <th class="py-2 px-4">E-mail</th>
          <th class="py-2 px-4">Phone</th>
          <th class="py-2 px-4">Action</th>
        </tr>
      </thead>
      <tbody class="bg-gray-100">
        <% users.forEach(user=> { %>
        <tr>
          <td class="py-3 px-4">
            <img
              src="<%= user.image %>"
              alt="User"
              class="w-12 h-12 rounded-full"
            />
          </td>
          <td class="py-3 px-4"><%= user.name %></td>
          <td class="py-3 px-4"><%= user.email %></td>
          <td class="py-3 px-4"><%= user.phone %></td>
          <td class="py-3 px-4 space-x-4">
            <a href="/edit/<%= user._id %>"
              ><i
                class="fas fa-pencil-alt p-2 text-indigo-500 hover:ring-1 hover:ring-indigo-600"
              ></i>
            </a>
            <a href="/delete/<%= user._id %>">
              <i
                class="fas fa-trash-alt p-2 text-red-500 hover:ring-1 hover:ring-red-600"
              ></i>
            </a>
          </td>
        </tr>
        <% }) %>

        <!-- Add more rows here -->
      </tbody>
    </table>
    <% if (nextPage !== null) { %>
    <div class="mt-4 flex justify-center">
      <a
        href="?page=<%= nextPage %>"
        class="text-black font-semibold hover:underline font-mono text-lg"
      >
        Next ></a
      >
    </div>

    <% } %> <% if (prevPage !== null) { %>
    <div class="mt-4 flex justify-center">
      <a
        href="?page=<%= prevPage %>"
        class="text-black font-semibold hover:underline font-mono text-lg"
      >
        < Previous</a
      >
    </div>

    <% } %>
  </div>
</div>
